---
import Base from '../layouts/Base.astro';
---
<Base title="Netzwerk — IT Services & Consulting">
  <section class="grid md:grid-cols-2 gap-8 items-center">
    <div class="reveal">
      <h1 class="heading">Empowering Your Business with Modern IT Solutions</h1>
      <p class="mt-3 text-white/80">Hardware • Software • Cloud • Cybersecurity • Development • Support</p>
      <p class="mt-2 text-white/70">We deliver secure, scalable and cost‑effective IT services — from infrastructure and cloud to cybersecurity, development and managed support.</p>
      <div class="mt-5 flex gap-3">
        <a class="btn" href="/contact">Contact Us</a>
        <a class="btn bg-transparent border border-white/20 text-white hover:bg-white/10" href="/services">Our Services</a>
      </div>
    </div>
    <div class="reveal">
      <div class="card p-0 overflow-hidden">
        <div class="aspect-video">
          <img src="https://images.unsplash.com/photo-1518779578993-ec3579fee39f?q=80&w=1600&auto=format&fit=crop" alt="Technology background" class="w-full h-full object-cover" />
        </div>
      </div>
    </div>
  </section>

  <section class="mt-12">
    <h2 class="heading">Our Core Services</h2>
    <div class="grid md:grid-cols-3 gap-4 mt-4">
      {[
        {title:'IT Infrastructure', copy:'Servers, storage, virtualization, device rollout and support.'},
        {title:'Cloud Solutions', copy:'Migrations, cost optimization, backups, DR and hybrid architectures.'},
        {title:'Cybersecurity', copy:'Vulnerability management, endpoint security, compliance.'},
        {title:'Web & App Development', copy:'Modern web, mobile and API development with CI/CD.'},
        {title:'Network Setup & Support', copy:'LAN/WAN, Wi‑Fi, firewalls and SD‑WAN.'},
        {title:'AMC & Maintenance', copy:'Proactive monitoring, SLAs and lifecycle programs.'},
      ].map((s)=> (
        <div class="card reveal">
          <h3 class="font-semibold">{s.title}</h3>
          <p class="text-slate-600 dark:text-white/70 mt-1">{s.copy}</p>
        </div>
      ))}
    </div>
  </section>

  <section class="mt-12">
    <h2 class="heading">Why Choose Us</h2>
    <div class="grid md:grid-cols-3 gap-4 mt-4">
      {[ 
        {t:'Certified Expertise', d:'Certified professionals across cloud, networking and security to deliver right the first time.'},
        {t:'Vendor-Agnostic', d:'We recommend the right tools for your need, not the most expensive ones.'},
        {t:'Transparent SLAs', d:'Clear communication, measurable outcomes and documented processes.'}
      ].map((f)=> (
        <div class="card reveal">
          <h3 class="font-semibold">{f.t}</h3>
          <p class="text-slate-600 dark:text-white/70 mt-1">{f.d}</p>
        </div>
      ))}
    </div>
  </section>

  <section class="mt-12">
    <h2 class="heading">Industries We Serve</h2>
    <div class="grid sm:grid-cols-2 md:grid-cols-4 gap-4 mt-4">
      {[ 'SMB', 'Healthcare', 'Education', 'Hospitality', 'Government', 'Non‑Profit', 'Retail', 'Startups' ].map((i)=> (
        <div class="card reveal text-center">
          <h3 class="font-semibold">{i}</h3>
          <p class="text-slate-600 dark:text-white/70 mt-1">Tailored solutions and compliance‑aware deployments.</p>
        </div>
      ))}
    </div>
  </section>

  <section class="mt-12">
    <h2 class="heading">What Clients Say</h2>
    <div class="grid md:grid-cols-3 gap-4 mt-4">
      {[
        {q:'Fast response and clear SLAs — exactly what we needed for growth.', a:'COO, Fintech Startup'},
        {q:'Migrated to cloud with zero downtime. Costs are now predictable.', a:'IT Manager, Manufacturing'},
        {q:'Reliable partner for both procurement and ongoing support.', a:'Founder, D2C Brand'}
      ].map((t)=> (
        <blockquote class="card reveal">
          <p class="italic">“{t.q}”</p>
          <footer class="mt-2 text-slate-600 dark:text-white/70">— {t.a}</footer>
        </blockquote>
      ))}
    </div>
  </section>

  <section class="mt-14 card reveal text-center">
    <div class="max-w-2xl mx-auto">
      <h2 class="heading">Ready to modernize your IT?</h2>
      <p class="mt-2 text-slate-600 dark:text-white/70">Let’s discuss your roadmap and get you a clear, actionable proposal.</p>
      <div class="mt-4 flex justify-center gap-3">
        <a href="/contact" class="btn">Get a Quote</a>
        <a href="/services" class="btn bg-transparent border border-slate-300 text-slate-800 hover:bg-slate-50 dark:border-white/20 dark:text-white dark:hover:bg-white/10">Explore Services</a>
      </div>
    </div>
  </section>
</Base>
